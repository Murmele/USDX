{
    "app-id" : "eu.usdx.UltraStarDeluxe",
    "runtime" : "org.freedesktop.Platform.ffmpeg",
    "runtime-version" : "1.6",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "ultrastardeluxe",
    "finish-args" : [
        "--socket=wayland",
        "--socket=x11",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=home"
    ],
    "modules" : [
        "modules/sdl.json",
        "modules/sdl_image.json",
        "modules/lua.json",
        "modules/freePascalCompiler.json",
        {
            "name" : "UltrastarDeluxe",
            "buildsystem" : "simple",
            "build-commands" : [
                "./autogen.sh",
                "./configure",
                "make --prefix=/app --exec-prefix=/app --with-fpc=/app/fpc-3.0.4/bin",
                "make DESTDIR=/app  install"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/UltraStar-Deluxe/USDX.git"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}
